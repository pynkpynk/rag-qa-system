# Example environment file for rag-qa-system backend.
# Copy to backend/.env.local and override with real values.
# Never commit real secrets to git.

APP_ENV=dev
AUTH_MODE=dev
ALLOW_PROD_DEBUG=1

DATABASE_URL=postgresql://user:pass@localhost:5432/ragqa
OPENAI_API_KEY=sk-test-REDACTED

# Values with "|" must be quoted so `source backend/.env.local` works.
DEV_SUB="auth0|local-user"
DEV_PERMISSIONS=read:docs,write:docs,delete:docs
DEV_ADMIN_SUBS=
ADMIN_SUBS=auth0|prod-admin

# Tokens below are placeholders; replace locally and keep private.
ADMIN_TOKEN=local-admin-token
USER_TOKEN=local-user-token

# Auth0 (optional in dev, required in auth0 mode)
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_ISSUER=https://your-tenant.us.auth0.com/
AUTH0_AUDIENCE=https://api.example.com/

DEV_SERVER_HOST=127.0.0.1
DEV_SERVER_PORT=8000

ENABLE_RETRIEVAL_DEBUG=1
ENABLE_HYBRID=1
ENABLE_TRGM=1
RETRIEVAL_DEBUG_REQUIRE_TOKEN_HASH=0
ADMIN_DEBUG_STRATEGY=firstk
